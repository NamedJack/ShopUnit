<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/black" />

        <View
            android:id="@+id/v_divier"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_order_num"
            android:layout_marginTop="5dp"
            android:background="@color/app_bg" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/charge_success"
            android:gravity="center"
            android:text="充值成功"
            android:textColor="@color/txt_charge_success" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/v_divier"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="充值金额" />

        <TextView
            android:id="@+id/tv_charge_money"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/v_divier"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:paddingLeft="80dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_charge_money"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="充值类型" />

        <TextView
            android:id="@+id/tv_charge_type"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_charge_money"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:paddingLeft="80dp" />

        <View
            android:id="@+id/v_divier1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_charge_type"
            android:layout_marginTop="5dp"
            android:background="@color/app_bg" />

        <TextView
            android:id="@+id/tv_time_mark"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/v_divier1"
            android:gravity="center_vertical"
            android:text="时间" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/v_divier1"
            android:layout_toRightOf="@+id/tv_time_mark"
            android:gravity="center_vertical|right" />

        <LinearLayout
            android:id="@+id/ll_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_below="@+id/tv_time"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/app_bg" />

            <TextView
                android:id="@+id/tv_reson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/ll_reason"
        android:layout_marginTop="5dp"
        android:background="@color/app_bg" />
</LinearLayout>